# Flask 环境配置
FLASK_ENV=development
FLASK_DEBUG=True

# 数据库配置
DATABASE_NAME=vnpy_dev
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=password

# 交易接口配置（CTP）
GATEWAY_NAME=CTP
CTP_USERID=
CTP_PASSWORD=
CTP_BROKERID=
CTP_TD_ADDRESS=
CTP_MD_ADDRESS=
CTP_APP_ID=
CTP_AUTH_CODE=

# 数据源配置（Tushare）
DATA_SOURCE=tushare
DATA_TOKEN=your_tushare_token_here

# API 配置
API_HOST=0.0.0.0
API_PORT=5000
API_PREFIX=/api

# 日志配置
LOG_LEVEL=DEBUG
LOG_FILE=logs/vnpy.log
LOG_CONSOLE=True

# 策略配置
STRATEGY_NAME=my_strategy
STRATEGY_SYMBOL=IF2312.CFFEX
STRATEGY_INTERVAL=1m

# 风控配置
MAX_POSITION_SIZE=10
MAX_DAILY_TRADES=100
MAX_DAILY_LOSS=10000
STOP_LOSS_RATIO=0.02
TAKE_PROFIT_RATIO=0.03

# 回测配置
BACKTEST_START=2023-01-01
BACKTEST_END=2023-12-31
BACKTEST_CAPITAL=1000000
BACKTEST_RATE=0.0001
BACKTEST_SLIPPAGE=0.0
BACKTEST_SIZE=1
BACKTEST_PRICETICK=0.01

# 任务管理配置
TASK_TIMEOUT=3600
TASK_MAX_RETRIES=3
TASK_LOG_DIR=logs/tasks